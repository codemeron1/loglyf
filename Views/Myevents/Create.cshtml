@model LogLife11.Models.Myevent

@{
    ViewData["Title"] = "Create";
}
<center>
<h1 style="margin-top: 40px; font-family:'Times New Roman', Times, serif;">Create</h1>
</center>
<hr />
<div class="row" id="div-create">
    <div class="col-md-4">
        <form asp-action="Create" id="form-create">
            <div asp-validation-summary="ModelOnly" class="text-danger" id="line-adjust"></div>
            <div class="form-group">
                <label asp-for="NameEvent" class="control-label"></label>
