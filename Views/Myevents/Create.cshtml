            </div>
            <br />
            <div class="form-group">
                <label asp-for="NameOrganizer" class="control-label"></label>
                <input asp-for="NameOrganizer" class="form-control" />
                <span asp-validation-for="NameOrganizer" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="background-color: brown;"/>
            </div>

        </form>
    </div>
</div>
<br />
<div id="back-list-create">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
